.main
  = image_tag("/assets/top-1.jpeg", class: "main-1")
  = image_tag("/assets/top-2.jpeg", class: "main-2")
  = image_tag("/assets/top-3.jpeg", class: "main-3")
  = image_tag("/assets/top-4.jpeg", class: "main-4")
.gray

.sign-up
  %h2.sign-up-title Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field-name
      = f.label :name
      %br
    .field-name-2
      = f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Last　name"
      = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "First　name"
    .field-name-kana
      = f.label :name_kana
      %br
    .field-name-kana-2
      = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "Last　name　kana"
      = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "First　name　kana"
    .field-birthday
      = f.label :birthday
      .birthday-form
        != sprintf(f.date_select(:birthday, { prefix:'birthday', prompt:"--", use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'}),'年','月')+'日'
    .field-tel
      = f.label :tel
      %br
    .field-tel-2
      = f.text_field :tel, autofocus: true, autocomplete: "tel"
    .field-email
      = f.label :email
      %br
    .field-email-2
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field-password
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br
      = f.password_field :password, autocomplete: "new-password"
    .field-password-2
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions-sign-up
      = f.submit "Sign up"
    = link_to "Top page", root_path,class: 'top-btn'
  = render "devise/shared/links"

= javascript_include_tag 'views.js'
