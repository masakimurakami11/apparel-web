= render partial: 'layouts/header-white'

.products
  .products-search-space
    - @products.each do |product|
      = link_to product_path(product), class: 'product-search' do
        .product-name-search
          = product.name
  .products-space
    - @products.each do |product|
      = link_to product_path(product), class: 'product' do
        = image_tag("/#{product.images[0].image}", class: 'product-image')
        .product-name
          = product.name
        .product-price
          = " Â¥ #{product.price.to_s(:delimited)}"